#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/ts-node" ]; then
  exec "$basedir/ts-node" --script-mode "$basedir/../@mathigon/studio/server/serve.ts" "$@"
else 
  exec ts-node --script-mode "$basedir/../@mathigon/studio/server/serve.ts" "$@"
fi
